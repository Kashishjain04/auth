    <image width="80px" src="<%= picture %>"></image>
    <h1 class="display-3">Hurray!! .. You've Discovered My Secret!</h1>    
    <% usersWithSecrets.forEach(function(user, i){ %>
    <% user.secrets.forEach(function(secret, i){ %>
    <p class="secret-text"><%= secret %></p>
    <% }); }); %>
    <hr>
    
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Off</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit Your most desire Secret</a>
    <a class="btn btn-dark btn-lg" href="/delete" role="button">Remove your any secret Secret</a>
  </div>
</div>

